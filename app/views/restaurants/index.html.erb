<% if @restaurants.any? %>
    <% @restaurants.each do |restaurant| %>
        <h2> <%= restaurant.name %> </h2>
    <%= link_to 'Review KFC', new_restaurant_review_path(restaurant) %>
    <% restaurant.reviews.each do |review| %>
    	<%= review.thoughts %>
    	<% end %>
    <% end %>
<% else %>
    No restaurants yet
<% end %>

